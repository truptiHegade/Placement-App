<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="#f6dccf">

    <Button
        android:id="@+id/reg_btn"
        android:layout_width="281dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/pass_reg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="145dp"

        android:backgroundTint="#624967"
        android:text="SIGN-UP" />

    <EditText
        android:id="@+id/email_reg"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="304dp"
        android:ems="10"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColorHint="#624967"

        />

    <EditText
        android:id="@+id/pass_reg"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/email_reg"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="229dp"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHint="#624967"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:srcCompat="@drawable/signup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="104dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="62dp"
        android:gravity="center"
        android:soundEffectsEnabled="false"
        android:text="Login In"
        android:textColor="#624967"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="248dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="62dp"
        android:gravity="center"
        android:text="Already Registered?"
        android:textColor="#624967"
        android:textSize="20sp" />



</RelativeLayout>



